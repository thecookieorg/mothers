<div class="container">
    <% if current_user.for_profit == true %>
      <br>
      <div class="row">
          <div class="col-md-6 col-md-offset-3">
              <div class="panel panel-default">
                <div class="panel-heading">
                  <h3 class="panel-title">Meet your all-star bookeeping team!</h3>
                </div>
                <div class="panel-body">
                  <div class="row">
                      <div class="col-md-6">
                        <%= image_tag 'bookkeeper4.jpg', class: "img-responsive img-rounded" %>
                        <p><em>Dayna, a bookkeeper</em></p>
                        <p>Fun facts about Dayna:<br>
                            <ul>
                                <li>She LOVES Starbucks</li>
                                <li>She is smart and gentle person</li>
                                <li>Your books are in great hands!</li>
                            </ul>
                        </p>
                      </div>
                      <div class="col-md-6">
                        <%= image_tag 'bookkeeper3.jpg', class: "img-responsive img-rounded" %>
                        <p><em>Marko, executive</em></p>
                        <p>Fun facts about Marko:<br>
                            <ul>
                                <li>Ex-soccer player</li>
                                <li>Family first, business second</li>
                                <li>Badass (survived 2 wars)</li>
                            </ul>
                        </p>
                      </div><!-- end col-md-6 -->
                    </div><!-- end row -->
                </div><!-- end panel-body -->
              </div><!-- end panel panel-default -->
          </div><!-- end col-md-6 col-md-offset-3 -->
      </div><!-- end row -->
    <% else %>
      <br>
      <div class="row">
          <div class="col-md-6 col-md-offset-3">
              <div class="panel panel-default">
                <div class="panel-heading">
                  <h3 class="panel-title">Meet your all-star bookeeping team!</h3>
                </div>
                <div class="panel-body">
                  <div class="row">
                      <div class="col-md-6">
                        <%= image_tag 'muna.jpg', class: "img-responsive img-rounded" %>
                        <p><em>Muna, a bookkeeper</em></p>
                        <p>Fun facts about Muna:<br>
                            <ul>
                                <li>He LOVES Accounting</li>
                                <li>If not doing accounting, he will fix your bike</li>
                                <li>He knows his sh*t!</li>
                            </ul>
                        </p>
                      </div>
                      <div class="col-md-6">
                        <%= image_tag 'jay.jpg', class: "img-responsive img-rounded" %>
                        <p><em>Jay, executive</em></p>
                        <p>Fun facts about Jay:<br>
                            <ul>
                                <li>Executive by day - a super hero by night</li>
                                <li>Saving the world first, accounting second</li>
                                <li>Loves quoting Dr. Seuss</li>
                            </ul>
                        </p>
                      </div><!-- end col-md-6 -->
                    </div><!-- end row -->
                </div><!-- end panel-body -->
              </div><!-- end panel panel-default -->
          </div><!-- end col-md-6 col-md-offset-3 -->
      </div><!-- end row -->
    <% end %>
    
    <br>
    
    
    <div class="row">
        <div class="col-md-6 col-md-offset-3">
            <div class="panel panel-default">
              <div class="panel-heading">
                <h3 class="panel-title">Lets create your account!</h3>
              </div>
              <div class="panel-body">
                <%= simple_form_for @user, url: wizard_path, method: :put do |f| %>
                    <%= f.input :name %>
                    <%= f.input :address %>
                    <%= f.input :company %>
                    <%= f.input :phone %>
                    <%= f.submit "Next", class: "btn btn-primary" %>
                <% end %>
              </div>
            </div>
        </div>
    </div>
</div>