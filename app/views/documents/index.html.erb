<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h2>Document Requests</h2>
    </div><!-- end col-md-12 -->
    <div class="col-md-12">
      <table class="table table-striped">
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Download File</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @documents.each do |document| %>
      <tr>
        <td><%= document.title %></td>
        <td><%= document.description %></td>
        <% if document.attachment.present? %>
          <td>
            <%= link_to document.attachment.url, class: "btn btn-primary btn-xs" do %>
              <i class="fa fa-file-text-o"></i> Download File
            <% end %>
          </td>
        <% else %>
          <td>No file</td>
        <% end %>
        <td><%= link_to 'Show', document %></td>
        <td><%= link_to 'Edit', edit_document_path(document) %></td>
        <td><%= link_to 'Destroy', document, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
    </div><!-- end col-md-12 -->
  </div><!-- end row -->
</div><!-- end container -->



<br>

