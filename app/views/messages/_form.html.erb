<div class="form-group">
  

    <%= simple_form_for(@message) do |f| %>
      
    
      <div class="form-inputs">
        <%= f.input :title, autofocus: true, class: "form-control" %>
        <%= f.input :description, class: "form-control" %>
      </div>
    
      <div class="form-actions">
        <%= f.button :submit %>
      </div>
    <% end %>    
  </div>


