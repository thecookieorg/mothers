<div class="container">
  <div class="row">
    <div class="col-md-12 text-center">
      <%= link_to 'Back', messages_path %>
      <h2><%= @message.title %></h2>
      <p><%= @message.description %></p>
      <hr>
    </div><!-- end col-md-12 -->
  </div><!-- end row -->
  
  <div class="row" style="margin-top: 40px;">
    <div class="col-md-6 col-md-offset-3">
      <% if @message.comments %>
        <% @message.comments.each do |comment| %>
          <div class="well">
          <div class="row">
            <div class="col-sm-12" style="margin-top: 17px;">
              <small><strong><%= comment.user.name %></strong> <span style="color: grey;"><%= time_ago_in_words(comment.created_at) %> ago</span></small>
              <p><%= comment.content %></p>    
            </div>
          </div>
          </div>
          <%# if comment.user == current_user %>
          <%# link_to 'Delete', message_comment_path(@message, comment), method: :delete, data: { confirm: 'Are you sure you want to delete this message?' } %>
          <%# end %>
        <% end %>
      <% end %>
      
        <div class="form-group form-group-lg">
          <%= form_for [@message, @message.comments.build] do |f| %>
            <%= f.text_field :content, placeholder: 'Type your message here...', class: "form-control", autofocus: true %>
          <% end %>
        </div>
      
    </div>
  </div>
  
</div><!-- end container -->
